<%= form_with(model: @tracker, local: true) do |f| %>
  <div data-controller="tracker-form" class="habit-form-modal">
    <div class="habit-form-container">
      <h2 class="text-center">Tes habits du jour</h2>
      <div class="form-container">
        <% @habits.each do |habit| %>
          <div class="d-flex justify-content-center">
            <%= habit.name %>
          </div>
          <div class="d-flex justify-content-center fs-2">
            <button class="btn btn-primary btn-tracker" data-bs-toggle="modal" data-bs-target="#habitFormModal">
              <%= image_tag("icons/minus.png", class:"add-btn")%>
            </button>
            <%= habit.goal&.value %>
            <%= habit.habit_type&.unit %>
            <button class="btn btn-primary btn-tracker" data-bs-toggle="modal" data-bs-target="#habitFormModal">
              <%= image_tag("icons/add.png", class:"add-btn")%>
            </button>
        </div>
        <% end %>
      </div>
      <div class="dashboard-bottom d-flex justify-content-center">
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#trackerFormModal">Sauvegarder</button>
      </div>
    </div>
  </div>
<% end %>

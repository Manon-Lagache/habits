<div class="gradient-bg">
  <div class="container-fluid">
    <div class="container py-4">
      <div class="header-show">
        <%= link_to root_path do %>
          <%= image_tag("icons/return.png", class: "icon-return")%>
        <% end %>
        <h2 class="title-white"><%= @habit.name %></h2>
        <%= image_tag("icons/parameters.png", class: "icon-parameters")%>
      </div>
      <div>
        <h5 class="title-white pt-2">Cette semaine</h5>
        <div class="card card-chart p-2">
          <%= area_chart @habit.chart_data, xtitle: "Date", ytitle: @habit.habit_type.unit, height: "200px"%>
        </div>
        <div class="info-content col-6 bg-white rounded-5 justify-content-between shadow">
        <i class="fa-solid fa-chart-column"></i>
        <span><strong class="fs-3">28  </strong>jours consécutifs</span>
      </div>
      </div>
    </div>
  </div>

  <div class="container-fluid white-bg">
   <div class="container pb-2">
      <div class="button d-flex justify-content-center">
        <button class="btn btn-primary px-4 py-2 mt-3 mb-3">Mettre à jour</button>
      </div>
     <div class="row m-0">
  <div class="col-6">
    <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
      <%= image_tag "icons/categories.png", class: "me-3 icon-show", alt: "Catégories" %>
      <span><strong class="fs-6">Catégorie</strong><br>
      <%= @habit.category.name %>
      </span>
    </div>
  </div>

  <div class="col-6">
    <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
      <%= image_tag "icons/goal.png", class: "me-3 icon-show", alt: "Catégories" %>
      <span><strong class="fs-6">Objectif</strong><br>
      <%= @goal.value %>
      <%= @habit.habit_type.unit %>
      </span>
    </div>
  </div>

  <div class="col-6 mt-3">
    <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
      <%= image_tag "icons/calendar.png", class: "me-3 icon-show", alt: "Catégories" %>
      <span><strong class="fs-6">Période</strong><br>
      <%= @goal.period_display %>
      </span>
    </div>
  </div>

  <div class="col-6 mt-3">
    <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
      <%= image_tag "icons/reminder.png", class: "me-3 icon-show", alt: "Catégories" %>
      <span data-habit-form-target="reminderStatus">
      <strong class="fs-6">Rappel</strong><br>
   Désactivé
      </span>
    </div>
  </div>
</div>
      <div class="dashboard-bottom d-flex">
      <div class="tip-section mt-3 container-fluid">
        <% @tips.each do |tip| %>
          <%= render 'shared/tip', tip: tip %>
        <% end %>
      </div>
    </div>
    </div>
  </div>
</div>

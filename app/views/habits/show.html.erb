<div class="gradient-bg">
  <div class="container-fluid">
    <div class="container py-4">

      <!-- Header -->
      <div class="header-show">
        <%= link_to root_path do %>
          <%= image_tag("icons/return.png", class: "icon-return") %>
        <% end %>
        <h2 class="title-white"><%= @habit.name %></h2>
        <%= link_to habit_path(@habit), data: { turbo_method: :delete } do%>
          <i class="fa-regular fa-trash-can" id="trash"></i>
        <% end %>
      </div>

      <!-- Chart section -->
      <div>
        <h5 class="title-white pt-2">Cette semaine</h5>
        <div class="card card-chart p-2">
          <%= area_chart @habit.chart_data, xtitle: "Date", ytitle: @habit.habit_type.unit, height: "200px" %>
        </div>

        <!-- Info cards row START -->
        <div class="row justify-content-between mx-0">
          <div class="info-content col-5 bg-white rounded-5 justify-content-between shadow">
            <i class="fa-solid fa-chart-column"></i>
            <span>
              <strong class="fs-3"><%= @habit.trackers.count %> </strong> jours consécutifs
            </span>
          </div>
                    <!-- espace -->
          <!-- tracker individuel -->
          <div class="info-content col-6 input-pill rounded-5 shadow d-flex justify-content-center">
            <div class="d-flex align-items-center d-flex justify-content-around w-100">
              <button type="button"
                      class="btn-tracker center"
                      data-action="click->tracker-form#decrement">
              -
              </button>

              <% if @habit.trackers.where(date:Date.today).present? %>
                <% value = @habit.trackers.where(date:Date.today).last.value %>
              <% else %>
                <% value = @habit.goal.value %>
              <% end %>

              <p class="mb-0"><%= value %> <%= @habit.habit_type.unit %></p>
              <button type="button"
                      class="btn-tracker"
                      data-action="click->tracker-form#increment">
              +
              </button>
            </div>
          </div>
        </div>
        <!-- Info cards row FIN -->
      </div>
    </div>
  </div>

  <!-- Section blanche en bas -->
  <div class="container-fluid white-bg">
    <div class="container pb-2">

      <!-- Bouton principal -->
      <div class="button d-flex justify-content-center">
        <button class="btn btn-primary px-4 py-2 mt-3 mb-3">Mettre à jour</button>
      </div>

      <!-- Infos générales -->
      <div class="row m-0">
        <div class="col-6">
          <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
            <%= image_tag "icons/categories.png", class: "me-3 icon-show", alt: "Catégories" %>
            <span>
              <strong class="fs-6">Catégorie</strong><br>
              <%= @habit.category.name %>
            </span>
          </div>
        </div>

        <div class="col-6">
          <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
            <%= image_tag "icons/goal.png", class: "me-3 icon-show", alt: "Objectif" %>
            <span>
              <strong class="fs-6">Objectif</strong><br>
              <%= @goal.value %>
              <%= @habit.habit_type.unit %>
            </span>
          </div>
        </div>

        <div class="col-6 mt-3">
          <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
            <%= image_tag "icons/calendar.png", class: "me-3 icon-show", alt: "Période" %>
            <span>
              <strong class="fs-6">Période</strong><br>
              <%= @goal.period_display %>
            </span>
          </div>
        </div>

        <div class="col-6 mt-3">
          <div class="info-content blue-bg rounded-5 shadow d-flex align-items-center p-2">
            <%= image_tag "icons/reminder.png", class: "me-3 icon-show", alt: "Rappel" %>
            <span data-habit-form-target="reminderStatus">
              <strong class="fs-6">Rappel</strong><br>
              <%= @habit.reminder_enabled? ? "Activé" : "Désactivé" %>
            </span>
          </div>
        </div>
      </div>

      <!-- Tips -->
      <div class="dashboard-bottom d-flex">
        <div class="tip-section mt-3 container-fluid">
           <%= render 'shared/tip', tip: @long_tip %>
        </div>
      </div>

    </div>
  </div>
</div>

<%= render 'habits/form', habit: @habit_new %>

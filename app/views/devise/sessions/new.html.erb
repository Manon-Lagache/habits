<div class="container d-flex justify-content-center mt-5 gap-2 align-items-center">
  <%= image_tag('logo-habits.png') %>
  <h1>Bienvenue sur Habits !</h1>
</div>
<div class="login-section col-6 justify-content-center mt-4">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                label: "Adresse e-mail",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                label: "Mot de passe",
                required: false,
                input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                label: "Se souvenir de moi",
                as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class:"btn btn-primary" %>
    </div>
  <% end %>
  <%= render "devise/shared/links", class:"py-3" %>
</div>
